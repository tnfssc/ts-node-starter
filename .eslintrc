{
  "extends": [
    "eslint:recommended",
    "plugin:@typescript-eslint/recommended",
    "prettier"
  ],
  "parser": "@typescript-eslint/parser",
  "parserOptions": {
    "ecmaVersion": 2022,
    "sourceType": "module"
  },
  "plugins": ["@typescript-eslint"],
  "root": true,
  "ignorePatterns": ["node_modules", "dist"],
  "env": {
    "node": true
  },
  "rules": {
    "@typescript-eslint/no-explicit-any": "off"
  }
}
